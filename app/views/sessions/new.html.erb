<div iclass="container sign-in">
  <div class="row">
    <div class="col s12 m8 l6 push-m2 push-l3 center">
      <%= image_tag 'logo-grey-58.svg', id: 'logo', width: '60px', style: 'margin-top: 2rem;' %>
    </div>
  </div>

  <div class="row">
    <div class="col s12 m8 l6 push-m2 push-l3">
      <ul class="tabs blue-text">
        <li class="tab col s6"><a href="#sign_in">Sign In</a></li>
        <li class="tab col s6"><a href="#sign_up">Create Account</a></li>
      </ul>
    </div>
  </div>

  <div id="sign_in" class="row">
    <div class="col s12 m8 l6 push-m2 push-l3">
      <%= form_tag sign_in_path, method: :post do %>
        <div class="section">
          <%= fields_for @user do |f| %>
            <div class="input-field">
              <%= f.label 'email', 'Email' %>
              <%= f.email_field 'email' %>
            </div>

            <div class="input-field password">
              <%= f.label 'password', 'Password' %>
              <%= f.password_field 'password' %>
              <a class="forgot-password" href="#">Forgot password?</a>
            </div>
          <% end %>
        </div>

        <% if flash[:sign_in] %>
          <div class="card grey darken-2 white-text">
            <div class="card-content">
              <%= flash[:sign_in] %>
            </div>
          </div>
        <% end %>

        <div class="section center">
          <%= button_tag 'Sign In', class: 'btn-flat white-text grey darken-2 waves-effect waves-light' %>

          <p class="center">or</p>

          <a class="oauth-google blue waves-effect waves-light white-text btn-flat" href="/auth/google_apps_chooser">
            Sign in with Google
          </a>
        </div>
      <% end %>
    </div>
  </div>

  <div id="sign_up" class="row">
    <div class="col s12 m8 l6 push-m2 push-l3">
      <%= form_tag sign_up_path, method: :post do %>
        <div class="section">
          <%= fields_for @user do |f| %>
            <div class="input-field">
              <%= f.label 'email', 'Email' %>
              <%= f.email_field 'email' %>
            </div>

            <div class="input-field password">
              <%= f.label 'password', 'New Password' %>
              <%= f.password_field 'password' %>
            </div>
          <% end %>
        </div>

        <% if flash[:sign_up] %>
          <div class="card grey darken-2 white-text">
            <div class="card-content">
              <%= flash[:sign_up] %>
            </div>
          </div>
        <% end %>

        <div class="section center">
          <%= button_tag 'Create Account', class: 'btn btn-flat white-text grey darken-2 waves-effect waves-light' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="center col s12">
      <a href="mailto:hello@trailblazer.io" id="feedback">Send feedback</a>
    </div>
  </div>
</div>
