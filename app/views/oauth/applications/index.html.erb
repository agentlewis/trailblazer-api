<% breadcrumb :oauth_applications %>

<div class="container">
  <h1>Developer Console</h1>

  <div class="section">
    <h2>Trailblazer Extension</h2>

    <p>
      Get the trailblazer extension up and running
    </p>

    <p>
      <%= link_to "Go to the Extension Project", 'https://github.com/twingl/trailblazer-extension', :class => 'btn waves-effect grey darken-2 waves-light' %>
    </p>
  </div>

  <div class="section">
    <h2>Your Applications</h2>
    <table class="highlight">
      <thead>
        <tr class="row">
          <th width="45%">Name</th>
          <th width="45%">Last Edited</th>
          <th width="10%"></th>
        </tr>
      </thead>

      <tbody>
        <% @applications.each do |app| %>
          <tr>
            <td><strong><%= app.name %></strong></td>
            <td><%= app.updated_at.strftime('%B %d, %Y') %></td>
            <td><%= link_to "Details", oauth_application_path(app.to_param), :class => 'btn btn-flat grey lighten-2 grey-text text-darken-2 waves-effect waves-light' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="section">
    <%= link_to "Create a new application", new_oauth_application_path, :class => 'btn waves-effect grey darken-2 waves-light' %>
  </div>
</div>
